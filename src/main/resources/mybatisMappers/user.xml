<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vtest.it.dao.UserDAO">
    <select id="getUser" resultType="user">
        SELECT username,regtime,password FROM git.user WHERE username =#{userName};
    </select>
    <insert id="register" parameterType="user">
        INSERT INTO git.user(username,regTime,password)VALUES (#{username},#{regtime},#{password});
    </insert>
    <update id="updateUserInfor" parameterType="user">
        UPDATE git.user SET ("username"=#{username},"regtime"=#{regtime},"password"=#{password}) WHERE username=#{username};
    </update>
    <delete id="deleteUser" parameterType="string">
        DELETE from git.user where username=#{username};
    </delete>
</mapper>